{
  "compilerOptions": {
    "outDir": "./dist",

    "lib": ["DOM", "DOM.Iterable", "es2020"],
    "module": "ESNext",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "alwaysStrict": true,
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "isolatedModules": true,
    "allowJs": true,
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
